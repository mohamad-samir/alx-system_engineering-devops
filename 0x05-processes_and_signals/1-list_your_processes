#!/usr/bin/env bash
# Bash script that displays a list of currently running processes

# Get the list of all running processes
processes=$(ps -eo pid,user,%cpu,%mem,vsize,rss,stat,start,time,command | sort -k 1,1nr | head -n 50)

# Print the list of processes in a user-oriented format
echo "USER       PID %CPU %MEM    VSZ   RSS TTY      STAT START   TIME COMMAND"
echo "$processes"
